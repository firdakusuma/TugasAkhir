<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95BCCC"
    android:padding="12dp"
    tools:context=".EditPage">


    <EditText
        android:id="@+id/etModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/etJumlahPenumpang"
        app:layout_constraintTop_toBottomOf="@+id/etJumlahPenumpang"
        tools:text="Automatic/Manual" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Mobil"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNamaMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        tools:text="Nama Mobil" />

    <EditText
        android:id="@+id/etHargaMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/etNamaMobil"
        app:layout_constraintTop_toBottomOf="@+id/etNamaMobil"
        tools:text="Harga Mobil" />

    <Button
        android:id="@+id/btnEditMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etJumlahPenumpang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/etHargaMobil"
        app:layout_constraintTop_toBottomOf="@+id/etHargaMobil"
        tools:text="Jumlah Penumpang" />

    <Button
        android:id="@+id/btUploadGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Upload Gambar"
        app:layout_constraintStart_toStartOf="@+id/etModel"
        app:layout_constraintTop_toBottomOf="@+id/etModel" />

    <EditText
        android:id="@+id/editImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:background="@drawable/bginput"
        android:editable="false"
        android:padding="12dp"
        android:text="Nama File Gambar"
        app:layout_constraintBottom_toBottomOf="@+id/btUploadGambar"
        app:layout_constraintStart_toEndOf="@+id/btUploadGambar"
        app:layout_constraintTop_toTopOf="@+id/btUploadGambar" />
</androidx.constraintlayout.widget.ConstraintLayout>